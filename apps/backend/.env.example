# CastMatch Environment Configuration
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
APP_NAME=CastMatch
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# Ports
PORT=3001
FRONTEND_PORT=3000
AI_SERVICE_PORT=8000

# Database (PostgreSQL) - aligned with docker-compose.yml
DATABASE_URL=postgresql://postgres:castmatch123@localhost:5432/castmatch_db?schema=public
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=castmatch123
POSTGRES_DB=castmatch_db

# Redis/Dragonfly (for sessions and caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Clerk Authentication (Primary)
CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key
CLERK_SECRET_KEY=your-clerk-secret-key
CLERK_SIGN_IN_URL=/sign-in
CLERK_SIGN_UP_URL=/sign-up
CLERK_AFTER_SIGN_IN_URL=/dashboard
CLERK_AFTER_SIGN_UP_URL=/dashboard

# JWT (for internal API tokens if needed)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRES_IN=30d

# AI/ML Services
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Vector Database - Qdrant (Primary)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key-optional
PRIMARY_VECTOR_PROVIDER=qdrant
ENABLE_DUAL_WRITE=false

# Vector Database - Pinecone (Legacy - can be removed after migration)
#PINECONE_API_KEY=your-pinecone-api-key-here
#PINECONE_ENVIRONMENT=your-pinecone-environment
#PINECONE_PROJECT_ID=your-pinecone-project-id

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000
AI_MODEL=claude-3-haiku-20240307
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7

# Agent Server Configuration
AGENTS_SERVER_URL=http://localhost:8080
AGENTS_SERVER_TIMEOUT=30000
AGENTS_SERVER_MAX_RETRIES=3
AGENTS_SERVER_HEALTH_CHECK_INTERVAL=30000

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@castmatch.com
EMAIL_FROM_NAME=CastMatch

# Email Service (Resend - Alternative/Fallback)
RESEND_API_KEY=your-resend-api-key

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_SID=your-messaging-service-sid

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=castmatch-uploads
S3_ENDPOINT=https://s3.amazonaws.com

# Google Services (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALENDAR_CLIENT_ID=your-calendar-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-calendar-secret

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=86400000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info
ENABLE_METRICS=true

# Queue Configuration
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=castmatch_redis_password
QUEUE_DEFAULT_REMOVE_ON_COMPLETE=true
QUEUE_DEFAULT_REMOVE_ON_FAIL=false

# WebSocket Configuration
WS_PORT=3001
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000

# External Services
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_AI_MATCHING=true
ENABLE_VIDEO_CALLS=true
ENABLE_PAYMENT_PROCESSING=false
ENABLE_SOCIAL_LOGIN=true
ENABLE_2FA=false
ENABLE_NOTIFICATIONS=false
ENABLE_CALENDAR=false

# Development Settings
DEBUG=false
LOG_LEVEL=info
MOCK_EXTERNAL_SERVICES=false
SEED_DATABASE=false

# Docker Settings
DOCKER_BUILDKIT=1
COMPOSE_PROJECT_NAME=castmatch