{
  "name": "@castmatch/backend",
  "version": "1.0.0",
  "description": "CastMatch backend API server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "bun --watch src/server-hono.ts",
    "dev:agents": "./start-with-agents.sh",
    "agents:start": "cd ../../agents && node start.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run agents:start\"",
    "build": "bun build src/server-hono.ts --target bun --outdir dist",
    "start": "bun dist/server.js",
    "test": "bun test",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.61.0",
    "@clerk/backend": "^1.15.4",
    "@trpc/server": "^11.5.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.6",
    "ioredis": "^5.3.2",
    "openai": "^5.20.1",
    "pg": "^8.16.3",
    "winston": "^3.12.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.57.0",
    "typescript": "^5.4.3"
  }
}