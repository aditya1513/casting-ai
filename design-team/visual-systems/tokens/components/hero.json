{
  "components": {
    "hero": {
      "container": {
        "minHeight": "100vh",
        "paddingY": "64px",
        "paddingX": {
          "mobile": "16px",
          "tablet": "24px",
          "desktop": "40px",
          "wide": "48px"
        }
      },
      "headline": {
        "fontSize": {
          "mobile": "32px",
          "tablet": "48px",
          "desktop": "64px"
        },
        "lineHeight": "1.1",
        "letterSpacing": "-0.02em",
        "fontWeight": "700",
        "gradient": {
          "start": "#06B6D4",
          "middle": "#8B5CF6",
          "end": "#F43F5E"
        }
      },
      "subheadline": {
        "fontSize": {
          "mobile": "18px",
          "tablet": "20px",
          "desktop": "24px"
        },
        "lineHeight": "1.5",
        "fontWeight": "400",
        "maxWidth": "480px",
        "opacity": "0.8"
      },
      "cta": {
        "primary": {
          "paddingY": "16px",
          "paddingX": "32px",
          "fontSize": "16px",
          "fontWeight": "600",
          "borderRadius": "12px",
          "background": "linear-gradient(135deg, #06B6D4 0%, #0891B2 100%)",
          "backgroundHover": "linear-gradient(135deg, #0891B2 0%, #0E7490 100%)",
          "shadow": "0 4px 14px 0 rgba(6, 182, 212, 0.39)",
          "shadowHover": "0 6px 20px 0 rgba(6, 182, 212, 0.5)",
          "transform": "translateY(0)",
          "transformHover": "translateY(-2px)",
          "glass": {
            "background": "rgba(6, 182, 212, 0.1)",
            "border": "1px solid rgba(6, 182, 212, 0.3)",
            "backdropFilter": "blur(8px)"
          }
        },
        "secondary": {
          "paddingY": "16px",
          "paddingX": "32px",
          "fontSize": "16px",
          "fontWeight": "600",
          "borderRadius": "12px",
          "background": "transparent",
          "backgroundHover": "rgba(255, 255, 255, 0.05)",
          "border": "2px solid rgba(255, 255, 255, 0.2)",
          "borderHover": "2px solid rgba(255, 255, 255, 0.3)",
          "glass": {
            "backdropFilter": "blur(4px)"
          }
        },
        "gap": "24px"
      },
      "visual": {
        "container": {
          "borderRadius": "24px",
          "padding": "24px",
          "glass": {
            "background": "rgba(255, 255, 255, 0.05)",
            "border": "1px solid rgba(255, 255, 255, 0.1)",
            "backdropFilter": "blur(16px) saturate(150%)",
            "boxShadow": "0 8px 32px 0 rgba(31, 38, 135, 0.15)"
          }
        },
        "card": {
          "aspectRatio": "3 / 4",
          "borderRadius": "16px",
          "padding": "16px",
          "background": "rgba(255, 255, 255, 0.03)",
          "border": "1px solid rgba(255, 255, 255, 0.08)",
          "backdropFilter": "blur(8px)",
          "transform": {
            "hover": "scale(1.05) translateY(-4px)",
            "transition": "all 0.3s cubic-bezier(0.175, 0.885, 0.320, 1.275)"
          },
          "shadow": {
            "default": "0 4px 6px rgba(0, 0, 0, 0.1)",
            "hover": "0 12px 24px rgba(0, 0, 0, 0.15)"
          }
        },
        "grid": {
          "columns": "2",
          "gap": "16px"
        }
      },
      "trust": {
        "gap": "32px",
        "item": {
          "gap": "8px",
          "fontSize": "14px",
          "opacity": "0.7",
          "icon": {
            "size": "16px",
            "color": "#06B6D4"
          }
        }
      }
    }
  }
}