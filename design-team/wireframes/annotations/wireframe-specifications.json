{
  "wireframe_package": {
    "title": "CastMatch Comprehensive Wireframes & User Flows",
    "version": "1.0.0",
    "created": "2024-12-19",
    "description": "Complete wireframe package for CastMatch platform with responsive designs, user flows, and interactive prototypes",
    "author": "CastMatch UX Team"
  },
  "design_system": {
    "breakpoints": {
      "mobile": "320px - 767px",
      "tablet": "768px - 1023px", 
      "desktop": "1024px+"
    },
    "color_palette": {
      "primary": "#3b82f6",
      "secondary": "#1d4ed8",
      "success": "#22c55e",
      "warning": "#fbbf24",
      "error": "#ef4444",
      "background_dark": "#0f172a",
      "background_medium": "#1e293b",
      "background_light": "#334155",
      "text_primary": "#f1f5f9",
      "text_secondary": "#94a3b8",
      "text_muted": "#64748b"
    },
    "typography": {
      "font_family": "-apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif",
      "heading_sizes": {
        "h1": "32px",
        "h2": "28px", 
        "h3": "24px",
        "h4": "20px",
        "h5": "18px",
        "h6": "16px"
      },
      "body_text": "14px",
      "small_text": "12px"
    },
    "spacing": {
      "xs": "4px",
      "sm": "8px", 
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px"
    },
    "border_radius": {
      "small": "4px",
      "medium": "8px",
      "large": "12px",
      "full": "50%"
    }
  },
  "wireframes": {
    "core_flows": {
      "talent_search": {
        "mobile": {
          "file": "core-flows/mobile/talent-search.html",
          "dimensions": "375x667px",
          "features": [
            "Touch-optimized search interface",
            "Filter tags with active states",
            "Infinite scroll talent grid", 
            "Bottom tab navigation",
            "Pull-to-refresh functionality"
          ],
          "annotations": {
            "search_bar": {
              "priority": 1,
              "behavior": "Real-time search with debounce (300ms)",
              "validation": "Minimum 2 characters required",
              "placeholder": "Dynamic based on user context"
            },
            "filter_tags": {
              "priority": 2,
              "behavior": "Multi-select with visual feedback",
              "limits": "Maximum 6 active filters",
              "persistence": "Saved in session storage"
            },
            "talent_cards": {
              "priority": 1,
              "layout": "Single column, full-width",
              "content": "Essential info only (name, type, location, rating)",
              "actions": "Tap to view profile, long-press for quick actions"
            }
          }
        },
        "desktop": {
          "file": "core-flows/desktop/talent-search.html", 
          "dimensions": "1440x900px",
          "features": [
            "Advanced sidebar filtering",
            "Grid/list view toggle",
            "Bulk selection actions",
            "Saved searches management",
            "Quick preview on hover"
          ],
          "annotations": {
            "sidebar_filters": {
              "priority": 1,
              "width": "280px",
              "collapse": "Collapsible on smaller screens",
              "sections": ["Talent Type", "Location", "Availability", "Experience", "Skills"]
            },
            "search_header": {
              "priority": 1,
              "components": ["Omnisearch", "Advanced filters toggle", "Save search", "Export results"],
              "responsive": "Stacks vertically on tablet"
            },
            "results_grid": {
              "priority": 1,
              "columns": "Auto-fit, minimum 300px per card",
              "pagination": "Load more on scroll + traditional pagination"
            }
          }
        }
      },
      "audition_creation": {
        "mobile": {
          "file": "core-flows/mobile/audition-creation.html",
          "dimensions": "375x667px", 
          "features": [
            "Multi-step wizard interface",
            "Progress indicator",
            "Form validation with inline errors",
            "File upload with preview",
            "Save draft functionality"
          ],
          "annotations": {
            "progress_steps": {
              "priority": 1,
              "steps": ["Basic Info", "Requirements", "Schedule", "Review"],
              "behavior": "Linear progression with validation gates",
              "persistence": "Auto-save every 30 seconds"
            },
            "form_sections": {
              "priority": 1,
              "validation": "Real-time validation on field blur",
              "error_handling": "Inline errors with helpful suggestions",
              "accessibility": "ARIA labels and keyboard navigation"
            },
            "navigation_buttons": {
              "priority": 1,
              "position": "Sticky bottom bar",
              "behavior": "Previous enabled after step 1, Next enabled after validation",
              "confirmation": "Exit confirmation if form has changes"
            }
          }
        }
      },
      "ai_chat": {
        "desktop": {
          "file": "core-flows/desktop/ai-chat-interface.html",
          "dimensions": "1440x900px",
          "features": [
            "Three-panel layout (history, chat, context)",
            "Message threading", 
            "Smart suggestions",
            "Context-aware responses",
            "Export conversation"
          ],
          "annotations": {
            "chat_history": {
              "priority": 2,
              "width": "320px",
              "behavior": "Collapsible sidebar with search",
              "persistence": "Conversations saved locally and synced",
              "organization": "Grouped by recency and project"
            },
            "message_area": {
              "priority": 1,
              "layout": "Flexible height with scroll",
              "message_types": ["User", "AI", "System", "Error"],
              "actions": ["Copy", "Like/Dislike", "Share", "Follow-up"]
            },
            "context_sidebar": {
              "priority": 2, 
              "width": "300px",
              "sections": ["Quick Actions", "Current Search", "Top Matches", "Tools"],
              "responsive": "Overlays on mobile"
            },
            "input_area": {
              "priority": 1,
              "features": ["Auto-resize textarea", "Attachment support", "Voice input", "Smart suggestions"],
              "shortcuts": ["Enter to send", "Shift+Enter for new line", "/ for commands"]
            }
          }
        }
      }
    },
    "pages": {
      "dashboard": {
        "desktop": {
          "file": "pages/desktop/dashboard.html",
          "dimensions": "1440x900px",
          "features": [
            "Performance metrics cards",
            "Quick actions sidebar",
            "Active projects grid", 
            "Activity feed",
            "Calendar widget",
            "Notification center"
          ],
          "annotations": {
            "stats_grid": {
              "priority": 1,
              "layout": "4 columns on desktop, 2 on tablet, 1 on mobile",
              "metrics": ["Active Projects", "Applications", "Auditions Scheduled", "Success Rate"],
              "refresh": "Real-time updates via WebSocket"
            },
            "quick_actions": {
              "priority": 1,
              "position": "Left sidebar, sticky",
              "actions": ["Create Project", "Find Talent", "Schedule Audition", "AI Assistant"],
              "customization": "User can reorder based on usage"
            },
            "projects_section": {
              "priority": 1,
              "layout": "Grid with progress bars and team avatars", 
              "sorting": "By status, recent activity, or deadline",
              "filters": "Active, Planning, Casting, Completed"
            }
          }
        }
      }
    }
  },
  "user_flows": {
    "talent_discovery": {
      "file": "flows/talent-discovery-flow.html",
      "description": "Complete journey from search initiation to talent selection",
      "entry_points": [
        "Dashboard quick search",
        "Navigation menu", 
        "AI assistant recommendation"
      ],
      "key_decision_points": [
        {
          "point": "Search method selection",
          "options": ["Quick search", "Advanced filters", "AI-assisted"],
          "success_rates": [45, 35, 20],
          "optimization": "Improve quick search relevance"
        },
        {
          "point": "Results satisfaction",
          "options": ["Continue browsing", "Refine search", "Exit"],
          "success_rates": [60, 35, 5],
          "optimization": "Better initial matching algorithm"
        },
        {
          "point": "Profile interest", 
          "options": ["Contact talent", "Add to shortlist", "Continue browsing"],
          "success_rates": [15, 20, 65],
          "optimization": "Improve profile preview information"
        }
      ],
      "success_metrics": {
        "completion_rate": "92%",
        "average_time": "2.3 minutes",
        "profile_view_rate": "67%",
        "conversion_rate": "35%"
      },
      "pain_points": [
        "Too many irrelevant results in quick search",
        "Advanced filters are complex for new users",
        "Profile cards lack key decision-making info"
      ]
    }
  },
  "prototypes": {
    "interactive_prototype": {
      "file": "prototypes/interactive-prototype.html",
      "description": "Clickable prototype demonstrating key interactions",
      "features": [
        "Device view switching (mobile/tablet/desktop)",
        "Screen navigation with loading states",
        "Interactive elements with hover/click feedback",
        "Keyboard shortcuts (arrow keys for navigation)",
        "Responsive layout adjustments"
      ],
      "interactions": {
        "navigation": "Click sidebar items to switch screens with loading animation",
        "device_toggle": "Toggle between device views with smooth transitions", 
        "hover_states": "All buttons and cards have hover feedback",
        "form_interactions": "Input fields respond to focus/blur events",
        "search_demo": "Real-time search simulation with debouncing"
      }
    }
  },
  "accessibility": {
    "wcag_compliance": "AA Level",
    "features": [
      "Keyboard navigation for all interactive elements",
      "ARIA labels and landmarks",
      "High contrast mode support", 
      "Screen reader compatibility",
      "Focus indicators",
      "Alternative text for images"
    ],
    "keyboard_shortcuts": {
      "global": {
        "/": "Focus search",
        "?": "Show help modal",
        "Esc": "Close modals/overlays"
      },
      "navigation": {
        "Tab": "Next element",
        "Shift+Tab": "Previous element", 
        "Enter": "Activate element",
        "Space": "Select/toggle"
      },
      "prototype": {
        "ArrowLeft": "Previous screen",
        "ArrowRight": "Next screen"
      }
    }
  },
  "performance_requirements": {
    "loading_times": {
      "initial_page_load": "<3 seconds",
      "navigation_transitions": "<500ms",
      "search_results": "<1.5 seconds",
      "image_loading": "<2 seconds"
    },
    "interactive_requirements": {
      "button_response": "<100ms",
      "form_validation": "<200ms", 
      "modal_animations": "<300ms",
      "scroll_performance": "60fps"
    }
  },
  "usability_testing": {
    "test_scenarios": [
      {
        "task": "Find a male actor aged 25-35 for a thriller series",
        "success_criteria": "Complete task in under 3 minutes with <2 refinements",
        "current_performance": "87% success rate, 2.1 minute average"
      },
      {
        "task": "Create an audition for lead role with specific requirements",
        "success_criteria": "Complete form without errors, save successfully", 
        "current_performance": "94% completion rate, 15% require help"
      },
      {
        "task": "Use AI assistant to get talent recommendations",
        "success_criteria": "Get relevant suggestions and take action",
        "current_performance": "78% satisfaction, 65% conversion to action"
      }
    ],
    "key_findings": [
      "Users prefer quick search over advanced filters for first attempt",
      "Visual feedback on form validation significantly reduces errors",
      "Context sidebar in AI chat helps users understand available actions"
    ]
  },
  "implementation_notes": {
    "development_priorities": [
      {
        "priority": 1,
        "component": "Talent search interface",
        "complexity": "High",
        "estimated_effort": "3-4 weeks",
        "dependencies": ["Search API", "Filter service", "User preferences"]
      },
      {
        "priority": 1, 
        "component": "Dashboard overview",
        "complexity": "Medium",
        "estimated_effort": "2-3 weeks",
        "dependencies": ["Analytics API", "Real-time updates", "Chart library"]
      },
      {
        "priority": 2,
        "component": "AI chat interface", 
        "complexity": "High",
        "estimated_effort": "4-5 weeks",
        "dependencies": ["AI service integration", "WebSocket setup", "Context management"]
      }
    ],
    "technical_considerations": [
      "Implement virtual scrolling for large talent lists",
      "Use intersection observer for infinite scroll",
      "Cache search results in localStorage with TTL",
      "Implement progressive image loading",
      "Use CSS Grid for responsive layouts",
      "Implement proper focus management for modals"
    ]
  }
}