{
  "name": "castmatch-design-research-tools",
  "version": "2.0.0",
  "description": "Screenshot capture and design research tools for CastMatch",
  "main": "capture-dribbble-improved.js",
  "scripts": {
    "capture:all": "node capture-dribbble-improved.js all",
