{
  "modal": {
    "overlay": {
      "background": "rgba(0, 0, 0, 0.5)",
      "backdropFilter": "blur(4px)",
      "zIndex": "var(--z-index-modalBackdrop)",
      "animation": "fadeIn var(--transition-duration-200) var(--transition-timing-smooth)"
    },
    
    "container": {
      "background": "var(--surface-overlay)",
      "borderRadius": "var(--border-radius-2xl)",
      "shadow": "var(--shadow-2xl)",
      "zIndex": "var(--z-index-modal)",
      "animation": "slideInUp var(--transition-duration-300) var(--transition-timing-smooth)",
      "maxHeight": "90vh",
      "overflow": "auto"
    },
    
    "sizes": {
      "sm": {
        "width": "400px",
        "maxWidth": "95vw"
      },
      "md": {
        "width": "600px",
        "maxWidth": "95vw"
      },
      "lg": {
        "width": "800px",
        "maxWidth": "95vw"
      },
      "xl": {
        "width": "1140px",
        "maxWidth": "95vw"
      },
      "full": {
        "width": "100vw",
        "height": "100vh",
        "maxWidth": "100vw",
        "borderRadius": "0"
      }
    },
    
    "header": {
      "padding": "var(--spacing-6)",
      "borderBottom": "1px solid var(--border-tertiary)",
      "fontSize": "var(--font-size-xl)",
      "fontWeight": "var(--font-weight-semibold)",
      "lineHeight": "var(--line-height-tight)",
      "color": "var(--text-primary)"
    },
    
    "body": {
      "padding": "var(--spacing-6)",
      "fontSize": "var(--font-size-base)",
      "lineHeight": "var(--line-height-relaxed)",
      "color": "var(--text-secondary)"
    },
    
    "footer": {
      "padding": "var(--spacing-6)",
      "borderTop": "1px solid var(--border-tertiary)",
      "display": "flex",
      "justifyContent": "flex-end",
      "gap": "var(--spacing-3)"
    },
    
    "closeButton": {
      "position": "absolute",
      "top": "var(--spacing-4)",
      "right": "var(--spacing-4)",
      "size": "32px",
      "borderRadius": "var(--border-radius-lg)",
      "background": "transparent",
      "color": "var(--text-tertiary)",
      "hover": {
        "background": "var(--action-tertiary-hover)",
        "color": "var(--text-primary)"
      }
    }
  }
}