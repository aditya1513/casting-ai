{
  "card": {
    "base": {
      "padding": "var(--spacing-6)",
      "borderRadius": "var(--border-radius-xl)",
      "borderWidth": "var(--border-width-DEFAULT)",
      "transition": "all var(--transition-duration-200) var(--transition-timing-smooth)"
    },
    
    "variants": {
      "default": {
        "background": "var(--surface-primary)",
        "border": "var(--border-primary)",
        "shadow": "var(--shadow-base)"
      },
      "elevated": {
        "background": "var(--surface-raised)",
        "border": "transparent",
        "shadow": "var(--shadow-lg)"
      },
      "outlined": {
        "background": "transparent",
        "border": "var(--border-primary)",
        "shadow": "none"
      },
      "filled": {
        "background": "var(--surface-secondary)",
        "border": "transparent",
        "shadow": "none"
      },
      "interactive": {
        "background": "var(--surface-primary)",
        "border": "var(--border-primary)",
        "shadow": "var(--shadow-sm)",
        "hover": {
          "background": "var(--surface-primary)",
          "border": "var(--border-focus)",
          "shadow": "var(--shadow-md)",
          "transform": "translateY(-2px)"
        }
      },
      "cinematic": {
        "background": "linear-gradient(135deg, var(--surface-primary) 0%, var(--surface-secondary) 100%)",
        "border": "transparent",
        "shadow": "var(--shadow-cinematic-depth)",
        "backdropFilter": "blur(10px)"
      }
    },
    
    "sizes": {
      "sm": {
        "padding": "var(--spacing-4)"
      },
      "md": {
        "padding": "var(--spacing-6)"
      },
      "lg": {
        "padding": "var(--spacing-8)"
      },
      "xl": {
        "padding": "var(--spacing-10)"
      }
    },
    
    "elevations": {
      "0": {
        "shadow": "none",
        "zIndex": "0"
      },
      "1": {
        "shadow": "var(--shadow-elevation-1)",
        "zIndex": "10"
      },
      "2": {
        "shadow": "var(--shadow-elevation-2)",
        "zIndex": "20"
      },
      "3": {
        "shadow": "var(--shadow-elevation-3)",
        "zIndex": "30"
      },
      "4": {
        "shadow": "var(--shadow-elevation-4)",
        "zIndex": "40"
      },
      "5": {
        "shadow": "var(--shadow-elevation-5)",
        "zIndex": "50"
      }
    }
  }
}