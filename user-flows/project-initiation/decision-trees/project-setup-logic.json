{
  "decision_tree": {
    "flow": "project_initiation",
    "version": "1.0.0",
    "entry_point": "user_intent_recognition",
    "nodes": {
      "user_intent_recognition": {
        "type": "classifier",
        "inputs": ["user_message", "context", "history"],
        "classification_rules": [
          {
            "pattern": ["new project", "cast new", "start casting", "need to cast"],
            "confidence": 0.9,
            "next": "project_type_determination"
          },
          {
            "pattern": ["similar to", "like last time", "copy from"],
            "confidence": 0.85,
            "next": "template_selection"
          },
          {
            "pattern": ["quick setup", "fast track", "urgent casting"],
            "confidence": 0.8,
            "next": "expedited_setup"
          }
        ],
        "default": "clarification_needed"
      },
      "project_type_determination": {
        "type": "selection",
        "prompt": "What type of project?",
        "options": {
          "ott_series": {
            "next": "platform_selection",
            "context_flags": ["needs_episodes", "seasonal_planning"]
          },
          "feature_film": {
            "next": "production_house_input",
            "context_flags": ["theatrical_release", "single_schedule"]
          },
          "web_series": {
            "next": "platform_selection",
            "context_flags": ["digital_first", "quick_turnaround"]
          },
          "commercial": {
            "next": "brand_input",
            "context_flags": ["short_timeline", "specific_look"]
          },
          "other": {
            "next": "custom_type_input",
            "context_flags": ["needs_clarification"]
          }
        }
      },
      "platform_selection": {
        "type": "selection",
        "condition": "project_type in ['ott_series', 'web_series']",
        "options": {
          "netflix": {
            "auto_apply": ["high_production_value", "international_standards"],
            "next": "production_house_input"
          },
          "amazon_prime": {
            "auto_apply": ["regional_content_focus", "diverse_casting"],
            "next": "production_house_input"
          },
          "disney_hotstar": {
            "auto_apply": ["family_friendly", "mass_appeal"],
            "next": "production_house_input"
          },
          "other": {
            "next": "production_house_input"
          }
        }
      },
      "production_house_input": {
        "type": "entity_extraction",
        "extract": "production_company",
        "validation_rules": {
          "known_entity": {
            "action": "link_to_profile",
            "next": "timeline_input"
          },
          "new_entity": {
            "action": "create_new_profile",
            "required_fields": ["name", "contact"],
            "next": "timeline_input"
          },
          "skip": {
            "allowed": true,
            "next": "timeline_input"
          }
        }
      },
      "timeline_input": {
        "type": "temporal_extraction",
        "extract": ["start_date", "duration", "urgency"],
        "processing_rules": [
          {
            "condition": "urgency == 'immediate'",
            "action": "set_priority_high",
            "next": "expedited_role_setup"
          },
          {
            "condition": "start_date < 30_days",
            "action": "set_priority_high",
            "next": "role_definition"
          },
          {
            "condition": "start_date >= 30_days",
            "action": "set_priority_normal",
            "next": "role_definition"
          }
        ]
      },
      "role_definition": {
        "type": "complex_input",
        "input_methods": {
          "natural_language": {
            "processor": "nlp_role_extractor",
            "next": "role_confirmation"
          },
          "structured_form": {
            "fields": ["title", "age_range", "gender", "characteristics"],
            "next": "role_confirmation"
          },
          "file_upload": {
            "accepted_formats": ["pdf", "docx", "txt"],
            "processor": "document_parser",
            "next": "role_confirmation"
          },
          "template_selection": {
            "options": ["lead_actor", "supporting_actor", "child_actor"],
            "next": "role_customization"
          }
        }
      },
      "role_confirmation": {
        "type": "validation",
        "display": "extracted_roles_summary",
        "user_actions": {
          "confirm": {
            "next": "team_setup"
          },
          "edit": {
            "next": "role_editing"
          },
          "add_more": {
            "next": "role_definition"
          }
        }
      },
      "team_setup": {
        "type": "multi_select",
        "optional": false,
        "minimum_members": 1,
        "member_types": {
          "director": {
            "permissions": ["final_approval", "view_all", "edit_all"],
            "notification_priority": "high"
          },
          "creative_producer": {
            "permissions": ["approval", "view_all", "comment"],
            "notification_priority": "high"
          },
          "assistant_director": {
            "permissions": ["manage_auditions", "view_all", "edit_schedule"],
            "notification_priority": "medium"
          },
          "line_producer": {
            "permissions": ["budget_approval", "view_budget", "comment"],
            "notification_priority": "low"
          }
        },
        "next": "communication_preferences"
      },
      "communication_preferences": {
        "type": "multi_select",
        "options": {
          "whatsapp": {
            "requires": "phone_numbers",
            "action": "create_whatsapp_group"
          },
          "email": {
            "requires": "email_addresses",
            "action": "send_invitations"
          },
          "sms": {
            "requires": "phone_numbers",
            "action": "setup_sms_alerts"
          },
          "in_app_only": {
            "requires": null,
            "action": "enable_push_notifications"
          }
        },
        "next": "budget_configuration"
      },
      "budget_configuration": {
        "type": "sensitive_input",
        "privacy_level": "high",
        "input_options": {
          "total_budget": {
            "format": "currency_range",
            "next": "constraint_check"
          },
          "per_role_budget": {
            "format": "role_budget_matrix",
            "next": "constraint_check"
          },
          "flexible": {
            "note": "Will show all options",
            "next": "constraint_check"
          },
          "skip": {
            "allowed": true,
            "consequence": "no_budget_filtering",
            "next": "constraint_check"
          }
        }
      },
      "constraint_check": {
        "type": "checklist",
        "optional": true,
        "constraints": [
          {
            "type": "location",
            "options": ["Mumbai", "Delhi", "Bangalore", "Other"]
          },
          {
            "type": "language",
            "options": ["Hindi", "English", "Marathi", "Other"]
          },
          {
            "type": "union_requirements",
            "options": ["CINTAA", "Non-union", "Either"]
          },
          {
            "type": "availability_window",
            "format": "date_range"
          }
        ],
        "next": "ai_learning_prompt"
      },
      "ai_learning_prompt": {
        "type": "recommendation",
        "condition": "has_previous_projects",
        "prompt": "Should I reference your previous projects?",
        "similar_projects": {
          "selection_criteria": ["genre", "budget_range", "team_overlap"],
          "max_suggestions": 3
        },
        "user_choice": {
          "yes": {
            "action": "import_preferences",
            "next": "final_confirmation"
          },
          "no": {
            "next": "final_confirmation"
          }
        }
      },
      "final_confirmation": {
        "type": "summary",
        "display_sections": [
          "project_details",
          "roles_defined",
          "team_members",
          "timeline",
          "budget_range",
          "constraints"
        ],
        "actions": {
          "confirm_and_start": {
            "next": "project_created",
            "triggers": ["save_project", "notify_team", "start_ai_recommendations"]
          },
          "edit_section": {
            "allows": "jump_to_any_previous_step",
            "maintains": "current_progress"
          },
          "save_draft": {
            "next": "draft_saved",
            "reminder": "24_hours"
          }
        }
      },
      "expedited_setup": {
        "type": "fast_track",
        "minimal_requirements": [
          "project_name",
          "primary_role",
          "timeline"
        ],
        "auto_defaults": {
          "team": "solo_mode",
          "budget": "flexible",
          "communication": "in_app_only"
        },
        "next": "expedited_confirmation"
      },
      "template_selection": {
        "type": "reference_selector",
        "source": "previous_projects",
        "selection_method": {
          "search": {
            "by": ["name", "genre", "date"]
          },
          "suggestions": {
            "based_on": ["recency", "success_rate", "similarity"]
          }
        },
        "after_selection": {
          "action": "clone_project_structure",
          "allow_modifications": true,
          "next": "template_customization"
        }
      },
      "error_handlers": {
        "network_failure": {
          "action": "save_locally",
          "retry": "automatic",
          "user_message": "Saving your progress offline"
        },
        "validation_failure": {
          "action": "highlight_errors",
          "provide": "examples",
          "allow": "skip_with_warning"
        },
        "timeout": {
          "after": "5_minutes_idle",
          "action": "auto_save_draft",
          "resume": "from_last_step"
        }
      }
    },
    "completion_criteria": {
      "minimum_required": [
        "project_name",
        "at_least_one_role",
        "timeline_indication"
      ],
      "optimal_setup": [
        "all_project_details",
        "all_roles_defined",
        "team_configured",
        "budget_set",
        "constraints_specified"
      ]
    }
  }
}