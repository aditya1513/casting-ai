# SSL Certificate Management Configuration

# Domain Configuration
export DOMAIN="app.castmatch.com"
export EMAIL="admin@castmatch.com"

# Certificate Paths
export WEBROOT_PATH="/var/www/html"
export CERT_PATH="/etc/letsencrypt/live"
export NGINX_CONFIG_PATH="/etc/nginx"

# Backup Configuration
export BACKUP_PATH="/opt/castmatch/ssl-backups"
export SSL_BACKUP_PASSPHRASE="your-ssl-backup-encryption-key"

# Alert Configuration
export SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
export ALERT_EMAIL="ops@castmatch.com"

# AWS Configuration for backups
export AWS_REGION="us-east-1"
export AWS_S3_BUCKET="castmatch-ssl-backups"