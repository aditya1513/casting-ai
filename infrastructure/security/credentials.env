# Credential Management Configuration
# Source this file before running credential management scripts

# AWS Configuration
export AWS_REGION="us-east-1"
export SECRETS_MANAGER_PREFIX="castmatch/production"

# HashiCorp Vault Configuration
export VAULT_ADDR="https://vault.castmatch.com:8200"
export VAULT_PATH="castmatch/production"
export USE_VAULT="false"  # Set to true if using Vault

# Encryption Configuration
export VAULT_ENCRYPTION_KEY="your-vault-master-encryption-key"
export BACKUP_ENCRYPTION_KEY="your-backup-encryption-key"

# Backup Configuration
export SECRETS_BACKUP_BUCKET="castmatch-secrets-backup"
export BACKUP_RETENTION_DAYS="365"

# Alert Configuration
export SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
export ALERT_EMAIL="security@castmatch.com"

# Service Account Configuration
export SERVICE_ACCOUNT_USER="castmatch"
export SERVICE_ACCOUNT_GROUP="castmatch"

# Rotation Schedule (cron format)
# Monthly JWT rotation: 0 2 1 * *
# Quarterly password rotation: 0 2 1 */3 *