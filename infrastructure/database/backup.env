# Database Backup Configuration
# Source this file before running backup scripts

# Database Configuration
export DB_HOST="prod-db.castmatch.com"
export DB_PORT="5432"
export DB_NAME="castmatch_production"
export DB_USER="castmatch_backup"
export DB_PASSWORD="your-secure-backup-password"

# Backup Configuration
export BACKUP_DIR="/opt/castmatch/backups"
export S3_BUCKET="castmatch-production-backups"
export AWS_REGION="us-east-1"
export RETENTION_DAYS="90"

# Encryption
export ENCRYPTION_KEY="your-backup-encryption-passphrase"

# Monitoring
export SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
export EMAIL_NOTIFICATIONS="ops@castmatch.com"

# Schedule Configuration (for cron)
# Daily full backup at 2 AM UTC: 0 2 * * *
# Hourly incremental backup: 0 * * * *
# Weekly cleanup: 0 3 * * 0