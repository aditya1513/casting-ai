{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules/**",
			".next/**",
			"build/**",
			"dist/**",
			"coverage/**",
			"*.d.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"recommended": true
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": "error",
				"noVoid": "off"
			},
			"correctness": {
				"recommended": true,
				"useExhaustiveDependencies": "warn"
			},
			"security": {
				"recommended": true
			},
			"style": {
				"recommended": true,
				"useImportType": "error"
			},
			"suspicious": {
				"recommended": true,
				"noArrayIndexKey": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "always"
		}
	},
	"typescript": {
		"enabled": true
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
