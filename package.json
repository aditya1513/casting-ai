{
  "name": "castmatch-monorepo",
  "version": "1.0.0",
  "description": "CastMatch - AI-powered casting platform monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.2.21",
  "scripts": {
    "dev": "bun run --parallel dev:*",
    "dev:backend": "cd apps/backend && bun run dev",
    "dev:frontend": "cd apps/frontend && bun run dev",
    "build": "bun run --parallel build:*",
    "build:backend": "cd apps/backend && bun run build",
    "build:frontend": "cd apps/frontend && bun run build",
    "test": "bun run --parallel test:*",
    "test:backend": "cd apps/backend && bun run test",
    "test:frontend": "cd apps/frontend && bun run test",
    "lint": "bun run --parallel lint:*",
    "lint:backend": "cd apps/backend && bun run lint",
    "lint:frontend": "cd apps/frontend && bun run lint",
    "clean": "rm -rf apps/*/dist apps/*/build apps/*/.turbo packages/*/dist packages/*/.turbo node_modules apps/*/node_modules packages/*/node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:push": "cd apps/backend && bun run db:push",
    "db:studio": "cd apps/backend && bun run db:studio",
    "db:seed": "bun run scripts/seed-database.ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.2.0"
  },
  "dependencies": {
    "@types/bcryptjs": "^3.0.0",
    "bcryptjs": "^3.0.2"
  }
}